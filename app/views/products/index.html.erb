<h1>Products</h1>

<h3>USA Made Products</h3>
<% if @usa.any? %>
<ul>
  <% @usa.each do |product| %>
  <li><%= link_to product.prod_name, product_path(product) %></li>
  <% end %>
</ul>
<% else %>
<p>There are no products yet.</p>
<% end %>



<h3>All Products</h3>
<% if @products.any? %>
<ul>
  <% @products.each do |product| %>
  <li><%= link_to product.prod_name, product_path(product) %></li>
  <% end %>
</ul>
<% else %>
<p>There are no products yet.</p>
<% end %>




<% if current_user && current_user.admin == true %>
<p><%= link_to "Create new product", new_product_path %></p>
<% end %>
