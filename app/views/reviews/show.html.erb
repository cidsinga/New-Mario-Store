<h1>Product: <%= @product.prod_name %></h1>
<h2>Reviewer: <%= @review.author %></h2>
<h2>Product Review: <%= @review.content_body %></h2>
<h2>Rating out of 5: <%= @review.rating %></h2>


<p><%= link_to "Edit review", edit_product_review_path(@product, @review) %></p>
<p><%= link_to "Delete review", product_review_path(@product, @review),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>

<p><%= link_to "Return to product", product_path(@product) %></p>
